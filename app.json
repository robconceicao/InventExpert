{
  "expo": {
    "name": "InventExpert",
    "slug": "InventExpert",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "inventexpert",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.inventexpert.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Permita o acesso à câmera para digitalizar relatórios.",
        "NSPhotoLibraryUsageDescription": "Permita o acesso às fotos para selecionar relatórios.",
        "NSPhotoLibraryAddUsageDescription": "Permita salvar imagens processadas.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.inventexpert.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permita o acesso à câmera para digitalizar relatórios."
        }
      ],
      "expo-notifications"
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "e9746070-0b84-4327-adef-3de641cf1d57"
      }
    },
    "owner": "robtadeu"
  }
}
